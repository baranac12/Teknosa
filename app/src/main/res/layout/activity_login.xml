<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teknosaOrange"
    tools:context=".ui.login.LoginActivity">

    <EditText
        android:id="@+id/emailText"
        android:layout_width="@dimen/witdh_size_280"
        android:layout_height="@dimen/height_size_50"
        android:layout_marginTop="@dimen/margin_24dp"
        android:ems="10"
        android:hint="@string/EmailText"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <EditText
        android:id="@+id/parolaText"
        android:layout_width="@dimen/witdh_size_280"
        android:layout_height="@dimen/height_size_50"
        android:layout_marginTop="@dimen/margin_24dp"
        android:ems="10"
        android:hint="@string/ParolaText"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/witdh_size_200"
        android:layout_height="@dimen/height_size_200"
        android:layout_marginTop="@dimen/margin_128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/witdh_size_250"
        android:layout_height="@dimen/height_size_50"
        android:layout_marginTop="@dimen/margin_32dp"
        android:backgroundTint="@color/teknosaButtonBlue"
        android:text="@string/ButtonLoginText"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parolaText" />

    <Button
        android:id="@+id/btnDontLogin"
        android:layout_width="@dimen/height_size_250"
        android:layout_height="@dimen/height_size_50"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginBottom="@dimen/margin_160dp"
        android:backgroundTint="@color/teknosaOrange"
        android:text="@string/LoginOlmaText"
        android:textColor="@color/white"
        android:textColorLink="@color/black"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>